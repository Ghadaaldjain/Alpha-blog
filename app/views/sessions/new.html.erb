<h1 class="display-5" align="center">Login</h1>
<br><hr><br>


 <%= form_with(scope: :session, url: login_path) do |form| %>

    <div class= "form-group row">
    <div class="colntrol-label col-sm-2 ">
      <%= form.label :email ,style: "font-weight:bold" %>
    </div>
    <div class="col-sm-8">
       <%= form.email_field :email, class: "form-control", placeholder: "Enter an Email" %>
    </div>
    </div>
    <div class= "form-group row">
    <div class="colntrol-label col-sm-2 ">
      <%= form.label :password_digest ,style: "font-weight:bold" %>
    </div>
    <div class="col-sm-8">
       <%= form.password_field :password_digest,  class: "form-control", placeholder: "Enter a Password" %>
    </div>
    </div>
    <div class= "form-group row">
      <div class="col-sm-2">
        <%= form.submit "Login", class:"btn btn-primary btn-lg", title:"Login" %>
        <%= link_to 'Cancel  ', articles_path, class:"btn btn-secondary btn-lg ", style: "font-family:times" %>

        </div>
      </div>
    </div>

<% end %>
