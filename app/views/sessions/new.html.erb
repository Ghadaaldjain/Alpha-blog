
 <p id="notice">
    <%= notice %> 

  </p>


<h1 class="display-5" align="center">Login</h1>
<br><hr><br>


 <%= form_with(scope: :session, url: login_path) do |form| %>

    <div class= "form-group row">
    <div class="colntrol-label col-sm-2 ">
      <%= form.label :email ,style: "font-weight:bold" %>
    </div>
    <div class="col-sm-8">
       <%= form.email_field :email, class: "form-control", placeholder: "Enter an Email" %>
    </div>
    </div>
    <div class= "form-group row">
    <div class="colntrol-label col-sm-2 ">
      <%= form.label :password ,style: "font-weight:bold" %>
    </div>
    <div class="col-sm-8">
       <%= form.password_field :password,  class: "form-control", placeholder: "Enter a Password" %>
    </div>
    </div>
    <div class= "form-group row" align="center">
      <div class="col-sm-11">
        <%= form.submit "Log in", class:"btn btn-primary btn-lg", title:"Login" %>
        <%= link_to 'Signup  ', signup_path, class:"btn btn-secondary btn-lg " %>
        <%= link_to 'Cancel  ', articles_path, class:"btn btn-secondary btn-lg" %>

        </div>
      </div>
    </div>

<% end %>
