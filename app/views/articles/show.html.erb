  <p id="notice">
    <%= notice %> 

  </p>
<h1 align="center">
  <b>Title:</b>
  <%= @article.title %>
</h1>
<hr/>
<div class="well col-xs-8 col-xs-offset-2" align="center">
	<!-- well = adds a boarder  -->
  <h1 align="center"><b>Description:</b></h1>

  <%= simple_format(@article.description ,  class:"discription") %>
<!--     simple format = This method does not remove the newlines from the text. -->
  <br/>
  <div class="btn">

    <% if logged_in? && @article.user == current_user %>
      <%= link_to 'Edit  ', edit_article_path(@article), class: "btn btn-primary btn-lg"%>
      <%= link_to 'Delete', @article , class: "btn btn-secondary  btn-lg ", method: :delete, data: { confirm: 'Are you sure?' }%>
    <% end %>
    <%= link_to 'Back  ', articles_path ,  class: "btn btn-secondary btn-lg" %><br/>

  </div>
</div>




